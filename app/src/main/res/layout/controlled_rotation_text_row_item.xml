<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/session_bg"
    android:orientation="horizontal"
    android:theme="@style/Theme.AirTime.Detail.List"
    android:weightSum="100">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="30"
        android:clipToOutline="true"
        android:src="@drawable/splashr">

    </ImageView>

    <TextView
        android:id="@+id/session_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/sample_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/sample_measure"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:text="ms"
        android:gravity="right" />
    <TextView
        android:id="@+id/air_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="right"
        android:text="ms"/>
    <TextView
        android:id="@+id/sample_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="40"
        android:gravity="right"
        android:text="ms"
        android:layout_marginRight="50dp"/>


</LinearLayout>