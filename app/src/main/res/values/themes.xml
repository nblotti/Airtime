<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AirTime" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink3_background</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:windowSplashScreenBackground">@color/pink3_background</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/splashr</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AirTime.Common" parent="Theme.AirTime">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/pink3_background</item>
        <item name="android:fontFamily">"@font/aguafina_script"</item>
    </style>

    <style name="Theme.AirTime.List" parent="Theme.AirTime.Common">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">" @font/roboto_slab"</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="Theme.AirTime.List.Date" parent="Theme.AirTime.List">
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.AirTime.List.Number" parent="Theme.AirTime.List">
        <item name="android:layout_gravity">left</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Theme.AirTime.SessionListContent" parent="Theme.AirTime.List">

        <item name="android:textSize">13sp</item>

    </style>

    <style name="Theme.AirTime.SessionListContentH" parent="Theme.AirTime.SessionListContent">
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Theme.AirTime.NewVideo.SeekBar" parent="Theme.AirTime.NewVideo">
        <item name="android:backgroundTint">@color/pink_background</item>
        <item name="android:thumbTint">@color/pink2_background</item>
        <item name="android:thumbTintMode">add</item>
        <item name="android:progressTint">@color/pink2_background</item>

    </style>


    <style name="Theme.AirTime.NewVideo" parent="Theme.AirTime.Common">

        <item name="android:textColor">@color/pink2_background</item>
        <item name="android:background">@color/pink_background</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>


    </style>


    <style name="Theme.AirTime.NewVideo.Button" parent="Theme.AirTime.NewVideo">
        <item name="android:backgroundTint">@color/pink2_background</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="Theme.AirTime.Detail.List" parent="Theme.AirTime.List">
        <item name="android:backgroundTint">@color/pink3_background</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Theme.AirTime.Detail" parent="Theme.AirTime.Common">
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/pink_background</item>
        <item name="android:textColor">@color/pink2_background</item>

        <item name="android:textSize">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>


        <item name="android:fontFamily">@font/roboto_slab</item>

    </style>
    <style name="Theme.AirTime.DetailPopup" parent="Theme.AirTime.Detail">
        <item name="android:textColor">@color/pink3_background</item>
    </style>
    <style name="Theme.AirTime.Detail.TableRow" parent="Theme.AirTime.Detail">
        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="Theme.AirTime.Detail.Button" parent="Theme.AirTime.Detail">
        <item name="android:background">@color/pink3_background</item>
        <item name="android:backgroundTint">@color/pink3_background</item>
        <item name="android:textSize">15dp</item>

    </style>


    <style name="Theme.AirTime.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AirTime.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AirTime.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>